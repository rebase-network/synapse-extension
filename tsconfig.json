{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "src/dist/js",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@ui/*": ["src/ui/*"],
      "@background/*": ["src/background/*"],
      "@contentScript/*": ["src/contentScript/*"],
      "@common/*": ["src/common/*"],
      "@utils/*": ["src/common/utils/*"]
    },
    "sourceMap": true,
    "jsx": "react",
    "lib": ["es2015", "dom"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  }
}